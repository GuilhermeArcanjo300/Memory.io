<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Memory.io</title>

    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="../css/layout_custom.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="../css/index.css" media="screen" />

</head>

<body>
    <main>
        <section class="login__dad">
            <header class="login__title">
                <p class="login__title-text">Memory.io</p>
            </header>

            <content class="login__body">
                <div class="group-input">
                    <label for="nickname">
                        Nickname:
                    </label>
                    <input type="text" name="nickname" id="nickname">
                </div>

                <button id="btnEnterRoom" class="login__body-entrar">Entrar</button>
            </content>
        </section>
    </main>

    <script>
        const baseUrl = document.location.origin;
        const txtNickname = document.querySelector('#nickname');
        const btnEnterRoom = document.querySelector('#btnEnterRoom');

        txtNickname.addEventListener('keyup', e => {
            if (e.keyCode === 13) btnEnterRoom.dispatchEvent(new Event('click'));
        });

        btnEnterRoom.addEventListener('click', () => {
            if (!txtNickname?.value) {
                alert('Preencha o seu nickname');
                txtNickname.focus();
                return;
            }

            window.location.href = `${baseUrl}/game?nickname=${txtNickname?.value}`;
        });
    </script>
</body>

</html>